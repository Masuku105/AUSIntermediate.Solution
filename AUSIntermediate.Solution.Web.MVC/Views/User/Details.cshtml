@model AUSIntermediate.Solution.Web.MVC.Models.UserModel

<div class="container">
         <div class="row">
             <h4>User Details</h4>
         </div>

        <div class"row">

            <div class="card col-md-12">
                <div class="card-header">
                    <h5>Personal Details</h5>
                </div>

                <div class="card-body">
                    <div class="row">
                        <input asp-for="UserId" hidden />
                        <div class="form-group col-md-6">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" readonly="readonly" />
                            
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Surname"></label>
                            <input asp-for="Surname" class="form-control" readonly="readonly"/>
                    
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="IdentityNumber"></label>
                            <input asp-for="IdentityNumber" class="form-control" readonly="readonly"/>
                            
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="DateOfBirth"></label>
                            <input asp-for="DateOfBirth" class="form-control" readonly="readonly"/>
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" readonly="readonly"/>                           
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Contact"></label>
                            <input asp-for="Contact" class="form-control" readonly="readonly"/>                            
                        </div>
                    </div>

                </div>


            </div>


        </div>
        @foreach (var address in Model.Addresses)
        {
            if (!address.IsResidentialAddress)
            {
                Model.PostalAddress = address;
                <div class"row">
                    
                    <div class="card col-md-12">
                        <div class="card-header">
                            <h5>Postal Address</h5>
                        </div>

                        <div class="card-body">
                            <div class="row">                               
                                <div class="form-group col-md-6">
                                    <label asp-for="PostalAddress.Country"></label>
                                    <input asp-for="PostalAddress.Country" class="form-control" readonly="readonly"/>
                                   
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="PostalAddress.Province"></label>
                                    <input asp-for="PostalAddress.Province" class="form-control" readonly="readonly"/>
                                    
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="PostalAddress.City"></label>
                                    <input asp-for="PostalAddress.City" class="form-control"readonly="readonly" />
                                    
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="PostalAddress.Suburb"></label>
                                    <input asp-for="PostalAddress.Suburb" class="form-control" readonly="readonly"/>
                                   
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="PostalAddress.UnitNumber"></label>
                                    <input asp-for="PostalAddress.UnitNumber" class="form-control" readonly="readonly"/>
                                    
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="PostalAddress.PostalCode"></label>
                                    <input asp-for="PostalAddress.PostalCode" class="form-control" readonly="readonly"/>
                                    
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="PostalAddress.ComplexName"></label>
                                    <input asp-for="PostalAddress.ComplexName" class="form-control" readonly="readonly"/>
                                   
                                </div>                          



                            </div>
                        </div>
                    </div>
                </div>
            }
            if (address.IsResidentialAddress)
            {
                Model.ResidentialAddress = address;
                <div class"row">

                    <div class="card col-md-12">
                        <div class="card-header">
                            <h5>Residential Address</h5>
                        </div>

                        <div class="card-body">
                            <div class="row">                                
                                <div class="form-group col-md-6">
                                    <label asp-for="ResidentialAddress.Country"></label>
                                    <input asp-for="ResidentialAddress.Country" class="form-control" readonly="readonly"/>
                                    
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="ResidentialAddress.Province"></label>
                                    <input asp-for="ResidentialAddress.Province" class="form-control" readonly="readonly"/>
                                    
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="ResidentialAddress.City"></label>
                                    <input asp-for="ResidentialAddress.City" class="form-control" readonly="readonly"/>
                                   
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="ResidentialAddress.Suburb"></label>
                                    <input asp-for="ResidentialAddress.Suburb" class="form-control" readonly="readonly"/>
                                    
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="ResidentialAddress.UnitNumber"></label>
                                    <input asp-for="ResidentialAddress.UnitNumber" class="form-control" readonly="readonly" />
                                    
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="ResidentialAddress.PostalCode"></label>
                                    <input asp-for="ResidentialAddress.PostalCode" class="form-control" readonly="readonly"/>
                                    
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="ResidentialAddress.ComplexName"></label>
                                    <input asp-for="ResidentialAddress.ComplexName" class="form-control" readonly="readonly"/>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        }
        <div class="row py-2 mt-2">
            <div class="col-sm-12 text-right">               
                             
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-sign-out-alt"></i> Back</a>           
            </div>         
        </div>   
</div>
